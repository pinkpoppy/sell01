.wrap 
  position relative
  
.detail-wine-info
  padding-bottom $shopping-bar+10
  z-index 10
  width 100%
  .inline-div
    display inline-block
    height $detail-bar-height
  .detail-headline-left
    width 90%
    clear right
  .price-right
    width 10%
    float right
    text-align right
    >span
      color $market-price
  .other-attr
    background #fff
    padding 10px 18px
    margin-bottom 6px
    p
      display inline-block
      -webkit-margin-before: 0em
      -webkit-margin-after: 0em
      width 32%
    .supply
      text-align center
    .sales-cnt
      text-align left
    .time-or-restrict
      text-align right
  .in-activity
    background #fff
    height 30px
    line-height 30px
    padding 10px
    margin-bottom 6px
    a
      cursor pointer
      text-decoration none
    span
      float right
  .shopping-bar
    background white
    position fixed
    height $shopping-bar
    width 100%
    left 0
    bottom 0
    z-index 2
    border-top 1px solid #eee
    .op-wrap
      padding 9px 10px 9px 22px
      button
        display inline-block
        outline none
      .op 
        border 1px solid
        width 23px
        height 23px
        background #efefef
      .buy-button
        background red
        border-radius 5px
        height 34px
        min-width 80px
        
.detail-wine-intro
  background #fff
  .intro-header
    width 100%
    padding 10px
    a
      margin-left 70%
      
  .intro-pic
    width 100%

#detail-basket
  width 4em
  height 5em
  background red
  position fixed
  bottom 100px
  right 20px
  z-index 10
#goods-num
  width 1em
  height 1em
  background #fff
  position absolute
  top -1em
  right -1em

.main-info-wrap
  padding 10px
  background #fff
  margin-bottom 1px
#immediate-buy
  background #f5a623
#add-goods
  background #fff
  margin-right 0.5em
#minus
  margin-right 1.5em
#show-number
  margin-right 1.5em
#plus
  margin-right 1em