.detail-wine-info
  margin-top 600px
  padding-bottom $shopping-bar+10
  width 100%
  .inline-div
    display inline-block
    height $detail-bar-height
  .detail-headline-left
    background blue
    width 90%
    clear right
  .price-right
    background purple
    width 10%
    float right
    text-align right
  .other-attr
    background white
    p
      display inline-block
      -webkit-margin-before: 0em
      -webkit-margin-after: 0em
  .in-activity
    background purple
    margin-top 20px
    height 30px
    line-height 30px
    a
      cursor pointer
      text-decoration none
    span
      float right
  .shopping-bar
    background white
    position fixed
    height $shopping-bar
    width 100%
    left 0
    bottom 0
    z-index 2
    border-top 1px solid #eee
    .op-wrap
      button
        display inline-block
        margin-top 10px
        outline none
      .op 
        border 1px solid
        width 30px
        height 30px
      .buy-button
        background red
        border-radius 5px
        height 30px
        width 120px
    
    
    