.wrap
  position absolute
  z-index 0
  top 0
  bottom 0
  width 100%
  background $basic-color
  overflow auto
  color #333
  
.header
  height $bar-height
  background $bar-color

.banner
  display visible
  position relative 
  overflow hidden 
  text-align center
  height 242px
  ul,ol
    height 242px    
  li
    width 100%
    float left
    height 242px
  img
    width 100%
    height 100%
.home-special-sell-wrap
  position relative

.notify
  padding 0px 8px
  
.module-clicked
  width 100%
  
  
.moduleName
  margin-left 8px
  
.module-item
  position absolute
  width 100%
  color $module-bar-color
  padding 0px 8px
  box-sizing border-box
  .module-bar
    width 100%
    height $module-bar
    background transparent
    a
      display inline-block
      line-height $module-bar
      vertical-align middlle
      height $module-bar
      width 100%
      text-align justify
      color $module-bar-color
      div
        display inline-block
        line-height 42px
        height 100%
        span
          height 100%
      img
        width 40px
        height 40px
        border-radius(50%)
        vertical-align middle
      >span
        float left
        margin-left 40px
      &:nth-child(3)
        float:right
      span
        display inline-block
        height 30px
.checkout
  margin-right 0px

  .module-list-wrap
    position relative
    margin-top 20px
    ul
      li
        position absolute
        display inline-block
        margin-top 20px
        .wine-wrap
          display inline-block
          overflow hidden
          .div-up
            position relative
            .wine-detail
              display inline-block
            img
              ppsition absolute
            span
              position absolute
              display inline-block
            .mail-info
              left 0
              top 0
              background purple
              opacity 0.8
            .cnt-info
              top 0
              right 0
            .subtitle
              left 0
              bottom 0
              background #000
              opacity 0.8
              width 100%
              color #fff
              font-size 0.8em
            .wine-img
              display block   

.last-wine-item
  margin-bottom $bottom-height

.bottom
  height $bottom-height
  background $bar-color 
  position fixed
  left 0
  bottom 0
  width 100%   
  a
    display inline-block
    text-decoration none
  & a:nth-child(1) 
    width 33%
  & a:nth-child(2) 
    width 34%
  & a:nth-child(3) 
    width 31%
.unslider
  position relative  
.unslider-nav
  position absolute
  width 100%
  height 26px
  text-align center
  bottom 0px
  left 0px
  background rgba(0,0,0,0.5)
  ol
    -webkit-margin-before 0em
    -webkit-margin-after 0em
    -webkit-padding-start 0px 
    li
      background #fff
      cursor default
      line-height 26px
      vertical-align middle

.market
  color #ff2600