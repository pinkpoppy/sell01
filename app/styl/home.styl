.header
  height $bar-height
  background $bar-color

.fading-slider
  position relative
  height 200px

.unslider-fade
  position relative

.unslider
  width 100%
  overflow visible
  position: relative
  margin-bottom 50px
  background #ff
  color #666
  border-radius 6px
  box-shadow 0 4px 6px rgba(0,0,0,.1)
  img
    width 100%
    -webkit-user-drag:none
    top:50%
    transform translateY(-50%)
    transform translateX(-50%)
    height:auto
  nav
    position absolute
    bottom -35px
    left 0
    right 0
    top auto
    margin 0
  li
    list-style none
    margin 0
    padding 0
    border 0
    

.unslider-wrap
  position relative
  height 200px
  width 100%
  li
    opacity 0
    position absolute

.unslider-nav
  position absolute
  bottom -35px
  left 0
  right 0
  top auto
  margin 0
  ol
    list-style none
    text-align center
    li
      display inline-block
      float none
      width 6px
      height 6px
      margin 0 4px
      padding 3px
      background transparent
      border-radius 50%
      overflow hidden
      text-indent -999em
      border 2px solid #fff
      cursor pointer
      opacity .4
