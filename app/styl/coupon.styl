.coupon-header
  heigth $bar-height
  background $bar-color

.coupon-wrap
  >ul
    list-style none
    -webkit-margin-before: 0em;
    -webkit-margin-after: 0em;
    -webkit-padding-start: 0px;
  li
    padding 10px 5%
  div
    display inline-block

.coupon-item
  height $coupon-height
  .coupon-option-wrap
    width 10%
    margin 0
    padding auto
    .outer-circle
      width 50%
      padding 3px
    .inner-circle 
      background $coupon-dot
      padding 0

  .coupon-img-wrap
    width 40%
    img
      width 100%
  .coupon-des-wrap
    width 50%