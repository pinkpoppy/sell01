.po-bg-color
  background #fff
  padding 10px 15px
.order-header
  padding 0px 15px
  display flex
  font-size 0.8em
  justify-content space-between
  height 27px
  line-height 27px
  vertical-align middle
  margin-bottom 1px
  div
    display inline-block
  .pay-state
    margin-bottom 1px
.tips
  display block
  width 100%
  height 36px
  line-height 36px
  padding 0px 15px
  margin-bottom 7px
  
  .order-serial-num
    width 40%
  .order-time
    width 40%
  .pay-state
    width 15%
    text-align right

.person-info
  height 74px
  display flex
  justify-content space-between
  align-items center
  margin-bottom 7px

.info-left
  min-width 90%
.pl-or-arrow
  background red
  width 24px
  height 24px
  display inline-block
.nm-tel-wrap
  display flex
  justify-content space-between
.goods-header
  height 33px
  display flex
  justify-content space-between
.goods-info
  margin-bottom 7px
.order-listview
  width 100%
  ul
    li 
      height 72px
      
      border-bottom 1px solid #f7f7f7
      a 
        display flex
        height 100%
        width 100%
        
.po-pic-wrap
  max-width 80%
  display inline-block
  .price
    margin-right 10px
.po-wine-pic
  width 72px
  height 72px
  vertical-align middle
.po-title
  height 48px
  line-height 24px
#po-ask
  height 29px
  line-height 25px
  vertical-align middle
  border 1px solid #005aff
  background #fff
  border-radius 2px
  font-size 15px